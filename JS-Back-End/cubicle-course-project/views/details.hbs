<h1>{{name}}</h1>
<img class="cube" src={{imageUrl}}>
<div class="details">
    <p><span>Description:</span> {{description}}</p>
    <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/edit/{{_id}}">Edit</a>
    <a class="btn" href="/details/{{_id}}/attach">Attach Accessory</a>
</div>
<h2>Accessories</h2>
<div class="accessories">
    {{#each accessories}}
    {{> accessory}}
    {{else}}
    <h3 class="italic">This cube has no accessories yet. Create the first one:
        <a href="/accessory/create" style="color: blue">Create</a>
    </h3>
    {{/each}}
</div>
<div class="details">
    <form action="/comments/{{_id}}/create" method="POST">
        <span>Your Name: <input type="text" name="author"></span>
        <span>Comment: <textarea name="content" rows="4"></textarea></span>
        <input type="submit" value="Post Comment">
    </form>
    {{#each comments}}
    {{> comment}}
    {{else}}
    <span style="font-stlye: italic; display: inline-block">No comments yet. Be the first one.</span>
    {{/each}}
</div>