<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <title>{{title}}</title>
        <link rel="stylesheet" href="/static/css/style.css" />
    </head>

    <body>
        <div id="container">
            {{#if errors}}
                {{#each errors}}
                    <div class="notification errorBox">
                        <span>{{this}}</span>
                    </div>
                {{/each}}
            {{/if}}

            {{#if user}}
                <nav>
                    <div class="left-container">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/hotel/create">Add +</a></li>
                        </ul>
                    </div>
                    <div class="right-container">
                        <a href="/auth/profile" class="log-out">{{user.username}}</a>
                        <a href="/auth/logout" class="log-out">Logout</a>
                    </div>
                </nav>
            {{else}}
                <nav>
                    <div class="left-container">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/auth/login">Login</a></li>
                            <li><a href="/auth/register">Register</a></li>
                        </ul>
                    </div>
                </nav>
            {{/if}}

            {{{body}}}

            <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
        </div>
    </body>

</html>